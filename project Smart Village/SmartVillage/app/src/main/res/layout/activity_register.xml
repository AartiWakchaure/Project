<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        >

        <TextView
            android:id="@+id/headingtext"
            android:layout_width="283dp"
            android:layout_height="104dp"
            android:text="Here's your first step with us!"
            android:textColor="@color/teal_200"
            android:layout_gravity="center"
            android:textSize="35sp"
            android:textStyle="bold"
            />



        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:paddingLeft="10dp"
                android:layout_gravity="center"
                android:hint="Name *"
                android:inputType="text"
                android:textColor="@color/black"
                />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:paddingLeft="10dp"
                android:layout_gravity="center"
                android:hint="Email *"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/mobile_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:paddingLeft="10dp"
                android:maxLength="10"
                android:layout_gravity="center"
                android:hint="Mobile Number *"
                android:inputType="number"
                android:textColor="@color/black"
                />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:paddingLeft="10dp"
                android:layout_gravity="center"
                android:hint="Password *"
                android:inputType="textPassword"
                android:textColor="@color/black"
                />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:paddingLeft="10dp"
                android:layout_gravity="center"
                android:hint="Confirm Password *"
                android:inputType="textPassword"
                android:textColor="@color/black"
                />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:paddingLeft="10dp"
                android:layout_gravity="center"
                android:hint="Age *"
                android:inputType="number"
                android:textColor="@color/black"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            >
            <TextView
                android:layout_width="136dp"
                android:layout_height="40dp"
                android:paddingLeft="6dp"
                android:paddingTop="6dp"
                android:textColor="@color/textColor"
                android:text="Gender              : "
                android:textSize="18sp"
                />
            <Spinner
                android:id="@+id/gender"
                android:textColor="@color/textColor"
                android:layout_width="180dp"
                android:layout_height="40dp"
                app:layout_constraintEnd_toEndOf="@+id/age"
                app:layout_constraintStart_toEndOf="@+id/gendertext"
                app:layout_constraintTop_toBottomOf="@+id/age" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            >
            <TextView
                android:layout_width="136dp"
                android:layout_height="40dp"
                android:paddingLeft="6dp"
                android:paddingTop="6dp"
                android:text="Occupation       : "
                android:textColor="@color/textColor"
                android:textSize="18sp"
                />
            <Spinner
                android:id="@+id/occupation"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:textColor="@color/textColor"
                app:layout_constraintEnd_toEndOf="@+id/age"
                app:layout_constraintStart_toEndOf="@+id/gendertext"
                app:layout_constraintTop_toBottomOf="@+id/age" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            >
            <TextView
                android:layout_width="136dp"
                android:layout_height="40dp"
                android:paddingLeft="6dp"
                android:paddingTop="6dp"
                android:text="Marital Status   : "
                android:textColor="@color/textColor"
                android:textSize="18sp"
                />
            <Spinner
                android:id="@+id/marital"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:textColor="@color/textColor"
                app:layout_constraintEnd_toEndOf="@+id/age"
                app:layout_constraintStart_toEndOf="@+id/gendertext"
                app:layout_constraintTop_toBottomOf="@+id/age" />
        </LinearLayout>

        <Button
            android:id="@+id/sv_registerbtn"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:backgroundTint="#2CB7CF"
            android:text="Register"
            android:textAllCaps="true"
            android:layout_marginBottom="30dp"
            app:cornerRadius="10dp"
            />

    </LinearLayout>


</ScrollView>